<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pe.edu.upeu.sysventas.controller.ClientesController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom right, #232526, #414345);">

    <!-- ENCABEZADO -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button fx:id="btnVolver" text="← Regresar" onAction="#volverAlMenu"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-radius: 8;"/>

            <Label text="Gestión de Personas"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- CUERPO PRINCIPAL -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- FORMULARIO -->
            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints halignment="LEFT"/>
                </columnConstraints>

                <Label text="Nombre:" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <TextField fx:id="txtNombre" promptText="Ingrese nombre" GridPane.columnIndex="1" prefWidth="250"/>

                <Label text="Apellidos:" style="-fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="1"/>
                <TextField fx:id="txtApellidos" promptText="Ingrese apellidos" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>

                <Label text="DNI:" style="-fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="2"/>
                <TextField fx:id="txtDni" promptText="Ingrese DNI" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="250"/>

                <Label text="N° Celular:" style="-fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="3"/>
                <TextField fx:id="txtCelular" promptText="Ingrese número de celular" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="250"/>

                <Label text="Estado:" style="-fx-text-fill: white; -fx-font-size: 14px;" GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbEstado" promptText="Seleccione estado" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="250">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Activo"/>
                            <String fx:value="Inactivo"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </GridPane>

            <!-- BOTONES CRUD -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Agregar" onAction="#onGuardar"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

                <Button text="Editar" onAction="#onEditar"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

                <Button text="Eliminar" onAction="#onEliminar"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

                <Button text="Limpiar" onAction="#onLimpiar"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
            </HBox>

            <!-- TABLA -->
            <TableView fx:id="tablaCategoria" prefWidth="850" prefHeight="300"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                    <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="150"/>
                    <TableColumn fx:id="colDni" text="DNI" prefWidth="100"/>
                    <TableColumn fx:id="colCelular" text="Celular" prefWidth="120"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
