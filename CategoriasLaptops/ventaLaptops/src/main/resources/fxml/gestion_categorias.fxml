<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="panelPrincipal" prefHeight="500.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.ventaLaptops.control.ClientesController"
            style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #64B5F6);">

    <!-- Título principal -->
    <top>
        <Label text="GESTIÓN DE CLIENTES - COMPUTACTUS" BorderPane.alignment="CENTER"
               style="-fx-text-fill: #0D47A1; -fx-font-weight: bold; -fx-font-size: 30px;">
            <font><Font name="Verdana Bold" size="30.0"/></font>
            <BorderPane.margin>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </BorderPane.margin>
        </Label>
    </top>

    <!-- Tabla de clientes -->
    <center>
        <TableView fx:id="tablaClientes" prefHeight="260.0" prefWidth="600.0"
                   BorderPane.alignment="CENTER"
                   style="-fx-background-radius: 12px; -fx-border-radius: 12px; -fx-border-color: #1565C0; -fx-border-width: 2;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="180.0" text="Nombre" />
                <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="colTelefono" prefWidth="120.0" text="Teléfono" />
                <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
            </columns>
            <BorderPane.margin>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </BorderPane.margin>
        </TableView>
    </center>

    <!-- Botones principales -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="60.0" spacing="18.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#nuevoAccion" prefWidth="120.0" text="Nuevo"
                        style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12px;"/>
                <Button onAction="#editarAccion" prefWidth="120.0" text="Editar"
                        style="-fx-background-color: #FBC02D; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12px;"/>
                <Button onAction="#eliminarAccion" prefWidth="120.0" text="Eliminar"
                        style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12px;"/>
                <Button onAction="#volverAccion" prefWidth="200.0" text="Volver a COMPUTACTUS"
                        style="-fx-background-color: #0D47A1; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12px;"/>
            </children>
            <padding>
                <Insets top="10.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
        </HBox>
    </bottom>

    <!-- Panel de edición lateral -->
    <right>
        <VBox fx:id="panelEdicion" alignment="TOP_CENTER" prefWidth="300.0" spacing="15.0"
              style="-fx-background-color: #FFFFFF; -fx-border-color: #1565C0; -fx-border-width: 2; -fx-background-radius: 12px; -fx-border-radius: 12px;">
            <children>
                <Label text="Detalle de Cliente"
                       style="-fx-text-fill: #0D47A1; -fx-font-weight: bold; -fx-font-size: 20px;">
                    <font><Font name="Verdana Bold" size="20.0"/></font>
                </Label>

                <VBox prefWidth="260.0" spacing="10.0">
                    <children>
                        <Label text="Nombre:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <TextField fx:id="nombreField" promptText="Ingrese nombre"/>

                        <Label text="Email:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <TextField fx:id="emailField" promptText="Ingrese email"/>

                        <Label text="Teléfono:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <TextField fx:id="telefonoField" promptText="Ingrese teléfono"/>

                        <Label text="Estado:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                        <HBox spacing="15.0">
                            <children>
                                <RadioButton fx:id="activoRadio" text="Activo" style="-fx-font-size: 14px;"/>
                                <RadioButton fx:id="inactivoRadio" text="Inactivo" style="-fx-font-size: 14px;"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Button onAction="#guardarAccion" prefWidth="160.0" text="Guardar"
                        style="-fx-background-color: #43A047; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 12px;"/>
            </children>
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
        </VBox>
    </right>
</BorderPane>
